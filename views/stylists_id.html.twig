<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <title>Hair Salon</title>
    </head>
    <body>
        <div class="container">
            <h1>{{ stylist.getName }}'s Information</h1>
                <ul>
                    <li>Name: {{ stylist.getName }}</a></li>
                        <ul>
                            <li>Phone: {{ stylist.getPhone }}</li>
                            <li>Address: {{ stylist.getAddress }}</li>
                        </ul>
                </ul>
            <form action="/stylists/{{ stylist.getId }}/edit" method="get">
                <button type="submit" name="button" class="btn btn-primary">Edit Stylist Info</button>
            </form>

            <h3>Want to add a new client for {{ stylist.getName }}? Enter client information below:</h3>


            <h1>Clients that {{stylist.getName}} currently has:</h1>
            {% if clients is not empty %}
            <ul>
                {% for client in clients %}
                    {% if stylist.getId == client.getStylistId %}
                        <li><a href="/client/{{ client.getId }}/edit">{{ client.getName }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
            {% endif %}

            <form action='/client_add' method='post'>
                <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId() }}">

                <label for='name'>Name:</label>
                <input id='name' name='name' type='text'>

                <button type='submit' class='btn btn-primary'>Add Client</button>
            </form>
            <a href="/">Homepage</a>
        </div>
    </body>
</html>
